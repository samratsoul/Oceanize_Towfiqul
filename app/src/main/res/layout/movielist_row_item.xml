<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/black">

    <ImageView
        android:id="@+id/imv_movie_poster"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginRight="@dimen/size_16dp"
        android:layout_marginLeft="@dimen/size_16dp"
        android:layout_marginTop="@dimen/size_16dp"
        android:background="@color/black"
        app:layout_constraintDimensionRatio="2:3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"></ImageView>

    <TextView
        android:id="@+id/tv_movie_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/size_5dp"
        android:paddingRight="@dimen/size_25dp"
        android:shadowColor="@color/white"
        android:shadowDx="1.5"
        android:shadowDy="2"
        android:shadowRadius="10"
        android:text=""
        android:textColor="@color/primary_text"
        android:textSize="@dimen/text_size_40sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/imv_movie_poster"
        app:layout_constraintTop_toTopOf="@+id/imv_movie_poster" />
</androidx.constraintlayout.widget.ConstraintLayout>